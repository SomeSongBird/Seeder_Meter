<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MostRecentFragment">

    <!-- TODO: Update blank fragment layout -->
    <TableLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Most recent data pulled"
            android:textAlignment="center"
            android:layout_margin="10dp"/>
        <TableRow
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Date and Time"/>
            <TextView
                android:id="@+id/mr_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Soil Temperature"/>
            <TextView
                android:id="@+id/mr_soilT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Soil Moisture"/>
            <TextView
                android:id="@+id/mr_soilM"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Air Temperature"/>
            <TextView
                android:id="@+id/mr_airT"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Air Humidity"/>
            <TextView
                android:id="@+id/mr_airH"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Sunlight Visibility"/>
            <TextView
                android:id="@+id/mr_sunV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Sunlight UV level"/>
            <TextView
                android:id="@+id/mr_sunUV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </TableRow>
    </TableLayout>

</FrameLayout>